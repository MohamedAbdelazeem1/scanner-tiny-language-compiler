/* check word is  1 --> res_word , 0 ---> symbols , -1 ----> another  */
int is_res_word(string word){


	for(int i=0;i<Res;i++){
		if(word == Res_Word[i]){
			return 1;
		}
//		else if(word == symbols[i]){
//
//			return 0;
//		}
	}
	return -1;

}




